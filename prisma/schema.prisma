generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameType {
  CASH
  TOURNAMENT
}

enum GameVariant {
  NLHE
  PLO
  PLO5
  MIXED
  OTHER
}

enum Role {
  USER
  ADMIN
}

enum Provider {
  POKERSTARS
  GG_POKER
  POKER_888
  PARTY_POKER
  WPT_GLOBAL
  WSOP_ONLINE
  LIVE_ROLL
  CLUB_GG
  OTHER
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER_IN
  TRANSFER_OUT
  SESSION_BUYIN
  SESSION_CASHOUT
  BONUS
  RAKEBACK
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PokerRoom {
  id        String   @id @default(cuid())
  name      String @unique
  brand     String?
  address   String?
  city      String
  state     String?
  country   String
  latitude  Float?
  longitude Float?
  timezone  String?
  website   String?
  phone     String?
  imageUrl  String?

  // M1: Hours of operation and amenities
  hoursJson       Json?
  hasFood         Boolean @default(false)
  hasHotel        Boolean @default(false)
  hasParking      Boolean @default(false)
  currentPromo    String?
  promoExpiresAt  DateTime?

  games           Game[]
  favoriteRooms   FavoriteRoom[]
  reviews         Review[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([city, country])
  @@index([latitude, longitude])
}

model Game {
  id          String     @id @default(cuid())
  pokerRoomId String
  pokerRoom   PokerRoom  @relation(fields: [pokerRoomId], references: [id], onDelete: Cascade)
  gameType    GameType
  variant     GameVariant @default(NLHE)
  cashGame    CashGame?
  tournament  Tournament?
  preferences UserPreferenceSnapshot[]
  waitTimes   WaitTime[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([gameType])
  @@index([pokerRoomId, gameType])
  @@index([variant])
  @@index([pokerRoomId, variant])
}

model CashGame {
  id               String   @id @default(cuid())
  gameId           String   @unique
  game             Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  smallBlind       Int
  bigBlind         Int
  minBuyin         Int
  maxBuyin         Int
  usualDaysOfWeek  String[] @default([])
  usualHours       Json?
  notes            String?

  // M1: Rake structure
  rakeCap          Int?
  rakePercentage   Float?
  rakeDescription  String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([smallBlind, bigBlind])
}

model Tournament {
  id                 String   @id @default(cuid())
  gameId             String   @unique
  game               Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  startTime          DateTime
  buyinAmount        Int
  rakeAmount         Int?
  startingStack      Int?
  blindLevelMinutes  Int?
  reentryPolicy      String?
  bountyAmount       Int?
  recurringRule      String?
  estimatedPrizePool Int?
  typicalFieldSize   Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([startTime])
  @@index([buyinAmount])
}

model User {
  id                  String   @id @default(cuid())

  // NextAuth.js fields
  name                String?
  image               String?
  emailVerified       DateTime?
  role                Role     @default(USER)

  // Existing auth fields
  email               String   @unique
  username            String   @unique
  hashedPassword      String?  // Nullable for OAuth

  // Preference fields
  homeLat             Float?
  homeLng             Float?
  bankrollProfile     String?
  riskTolerance       String?
  preferredStakesMin  Int?
  preferredStakesMax  Int?
  maxTravelDistance   Int?
  preferredStartTimes Json?
  preferredVariants   GameVariant[]

  // M2: Custom ranking weights
  distanceWeight      Float? @default(0.3)
  bankrollWeight      Float? @default(0.25)
  preferenceWeight    Float? @default(0.45)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  accounts            Account[]
  sessions            Session[]
  favoriteRooms       FavoriteRoom[]
  preferenceSnapshots UserPreferenceSnapshot[]
  reviews             Review[]
  waitTimes           WaitTime[]
  bankrollAccounts    BankrollAccount[]
}

model FavoriteRoom {
  id          String    @id @default(cuid())
  userId      String
  pokerRoomId String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pokerRoom   PokerRoom @relation(fields: [pokerRoomId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([userId, pokerRoomId])
  @@index([userId])
  @@index([pokerRoomId])
}

model UserPreferenceSnapshot {
  id              String   @id @default(cuid())
  userId          String
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameId          String
  game            Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  preferenceScore Float
  createdAt       DateTime @default(now())

  @@unique([userId, gameId])
}


model Review {
  id          String    @id @default(cuid())
  rating      Int
  comment     String?
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pokerRoomId String
  pokerRoom   PokerRoom @relation(fields: [pokerRoomId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, pokerRoomId])
}

model WaitTime {
  id        String   @id @default(cuid())
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  minutes   Int
  createdAt DateTime @default(now())

  @@unique([gameId, userId])
}

// Bankroll Tracking Models

model BankrollAccount {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider         Provider
  nickname         String?
  balance          Int      @default(0)  // cents
  depositTolerance Int      @default(0)  // cents - how much more they'd add
  currency         String   @default("USD")
  isActive         Boolean  @default(true)

  gameSessions     GameSession[]
  transactions     BankrollTransaction[]

  lastSyncedAt     DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, provider])
  @@index([userId])
  @@index([provider])
}

model GameSession {
  id                String   @id @default(cuid())
  bankrollAccountId String
  bankrollAccount   BankrollAccount @relation(fields: [bankrollAccountId], references: [id], onDelete: Cascade)

  sessionType       GameType
  variant           GameVariant @default(NLHE)

  buyIn             Int                // cents
  cashOut           Int      @default(0)  // cents (0 = busted)
  result            Int      @default(0)  // cents: cashOut - buyIn

  stakesDescription String?            // "1/2 NL" or "$200 Nightly"
  venueName         String?            // room/site name

  startedAt         DateTime @default(now())
  endedAt           DateTime?
  durationMinutes   Int?

  notes             String?

  transactions      BankrollTransaction[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([bankrollAccountId])
  @@index([startedAt])
  @@index([sessionType])
}

model BankrollTransaction {
  id                String   @id @default(cuid())
  bankrollAccountId String
  bankrollAccount   BankrollAccount @relation(fields: [bankrollAccountId], references: [id], onDelete: Cascade)

  type              TransactionType
  amount            Int                // cents (positive = in, negative = out)
  balanceAfter      Int                // snapshot for audit trail

  sessionId         String?
  session           GameSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  notes             String?
  createdAt         DateTime @default(now())

  @@index([bankrollAccountId])
  @@index([createdAt])
  @@index([type])
}
